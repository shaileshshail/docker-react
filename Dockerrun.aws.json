{
    "language": "generic",
    "os": [
      "linux"
    ],
    "dist": "xenial",
    "sudo": true,
    "services": [
      "docker"
    ],
    "before_install": [
      "docker build -t shaileshshail/docker-react -f Dockerfile.dev ."
    ],
    "script": [
      "docker run -e CI=true shaileshshail/docker-react npm run test"
    ],
    "deploy": [
      {
        "provider": "elasticbeanstalk",
        "region": "ap-south-1",
        "app": "docker",
        "env": "Docker-env",
        "bucket_path": "docker",
        "on": {
          "branch": [
            "main"
          ]
        },
        "access_key_id": "$AWS_ACCESS_KEY",
        "secret_access_key": "$AWS_SECRET_KEY",
        "skip_cleanup": true,
        "bucket": "elasticbeanstalk-ap-south-1-620976262807"
      }
    ]
  }